<Window x:Class="NotionPlay.VisualComponents.SingleNoteEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotionPlay.VisualComponents"
        xmlns:v="clr-namespace:MinimalisticWPF.Controls;assembly=MinimalisticWPF.Controls"
        mc:Ignorable="d"
        Title="SingleNoteEditor" Height="200" Width="300" WindowStyle="None" AllowsTransparency="True" BorderThickness="0.4" FontSize="12">
    <Window.Template>
        <ControlTemplate>
            <Grid Width="{TemplateBinding Width}"
                  Height="{TemplateBinding Height}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.ColumnSpan="2"
                        Background="{TemplateBinding Background}"
                        Margin="15,2,15,2"
                        PreviewMouseLeftButtonDown="Border_MouseLeftButtonDown"
                        Grid.ZIndex="1"/>
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           FontSize="{TemplateBinding FontSize}"
                           Text="⇢ 编辑音符"
                           Foreground="{TemplateBinding Foreground}"
                           HorizontalAlignment="Left"
                           Margin="15,2,0,2"
                           Grid.ZIndex="2"/>
                <Border Grid.RowSpan="3" Grid.ColumnSpan="2"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="0"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        Grid.ZIndex="0"/>
                <Border Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="0,0.3,0,0" BorderBrush="{TemplateBinding BorderBrush}"/>
                <Border Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,0.3" BorderBrush="{TemplateBinding BorderBrush}"/>
                
                <v:Button Click="CloseEditor" Grid.Row="2" Grid.ColumnSpan="2" Data="关闭" ContentScale="0.618" Margin="2" Style="{StaticResource nicebutton}"/>
                
                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=local:SingleNoteEditor},Path=PositionSymbol}" Grid.Row="1" Grid.Column="0" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,20,0,0"/>
                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=local:SingleNoteEditor},Path=ValueSymbol}" Grid.Row="1" Grid.Column="0" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,50,0,0"/>
                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=local:SingleNoteEditor},Path=LevelSymbol}" Grid.Row="1" Grid.Column="0" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,80,0,0"/>
                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=local:SingleNoteEditor},Path=DurationSymbol}" Grid.Row="1" Grid.Column="0" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,110,0,0"/>
                
                <v:Button Data="↑" Click="Up_Note" Margin="15,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Height="15" Width="35" Style="{StaticResource nicebutton}"/>
                <v:Button Data="↓" Click="Down_Note" Margin="60,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Height="15" Width="35" Style="{StaticResource nicebutton}"/>

                <v:Button Data="↑" Click="Up_Frequency" Margin="15,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Height="15" Width="35" Style="{StaticResource nicebutton}"/>
                <v:Button Data="↓" Click="Down_Frequency" Margin="60,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Height="15" Width="35" Style="{StaticResource nicebutton}"/>

                <v:Button Data="↑" Click="Up_Duration" Margin="15,110,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Height="15" Width="35" Style="{StaticResource nicebutton}"/>
                <v:Button Data="↓" Click="Down_Duration" Margin="60,110,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Height="15" Width="35" Style="{StaticResource nicebutton}"/>
            </Grid>
        </ControlTemplate>
    </Window.Template>
</Window>
