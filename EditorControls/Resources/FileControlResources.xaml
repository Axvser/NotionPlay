<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ec="clr-namespace:NotionPlay.EditorControls">
    <Style TargetType="{x:Type ec:FileNode}" x:Key="nicefilenode">
        <Setter Property="DarkHoveredBackground" Value="#6D6D6D"/>
        <Setter Property="DarkHoveredForeground" Value="Cyan"/>
        <Setter Property="LightHoveredBackground" Value="#6D6D6D"/>
        <Setter Property="LightHoveredForeground" Value="Red"/>
    </Style>
</ResourceDictionary>