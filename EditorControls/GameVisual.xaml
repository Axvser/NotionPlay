<Window x:Class="NotionPlay.EditorControls.GameVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotionPlay.EditorControls"
             xmlns:wpfc="clr-namespace:MinimalisticWPF.Controls;assembly=MinimalisticWPF.Controls"
             mc:Ignorable="d"
             Title="Game Visual"
             Height="300" Width="800" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" Visibility="Hidden" Topmost="True" Opacity="0">
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Viewbox>
                <Border Width="{TemplateBinding Width}" 
                        Height="{TemplateBinding Height}"
                        BorderBrush="{TemplateBinding Foreground}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=CornerRadius}"
                        ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{TemplateBinding Title}" Foreground="{TemplateBinding Foreground}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" Grid.ZIndex="1"/>
                        <Border Grid.Row="0" Background="{TemplateBinding Background}" CornerRadius="10,10,0,0" BorderThickness="0" MouseLeftButtonDown="Border_MouseLeftButtonDown"/>
                        <ContentPresenter Grid.RowSpan="2"/>
                    </Grid>
                </Border>
            </Viewbox>
        </ControlTemplate>
    </Window.Template>
    <Viewbox>
        <Grid Height="300" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="270"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <local:ProgressBar Progress="{Binding Progress}" Grid.Column="0"/>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
