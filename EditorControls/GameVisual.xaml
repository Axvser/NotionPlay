<Popup x:Class="NotionPlay.EditorControls.GameVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotionPlay.EditorControls"
             xmlns:wpfc="clr-namespace:MinimalisticWPF.Controls;assembly=MinimalisticWPF.Controls"
             mc:Ignorable="d"
             x:Name="Root"
             Height="300" Width="800" 
             AllowsTransparency="True" 
             StaysOpen="True"
             Placement="AbsolutePoint"
             PopupAnimation="Scroll">
    <Border Background="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Background}"
            CornerRadius="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=CornerRadius}"
            ClipToBounds="True">
        <Grid Height="300" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="270"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border Background="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Background}"
                        CornerRadius="10,10,0,0"
                        MouseLeftButtonDown="TopBorder_MouseLeftButtonDown"
                        MouseMove="TopBorder_MouseMove"
                        MouseLeftButtonUp="TopBorder_MouseLeftButtonUp"/>
                <TextBlock Text="Game Visual" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid Height="270" Width="800">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="270"/>
                        <ColumnDefinition Width="390"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <local:ProgressBar Progress="{Binding Progress}" Grid.Column="0"/>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <local:PianoVisual x:Name="piano" Grid.RowSpan="7" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=PianoVisibility}"/>
                        <TextBlock Text="名称 >" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1"/>
                        <TextBlock Text="速度 >" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2"/>
                        <TextBlock Text="拍号 >" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3"/>
                        <TextBlock Text="延迟倍率 >" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4"/>
                        <TextBlock Margin="90,0,0,0" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Text="{Binding Name}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1"/>
                        <TextBlock Margin="90,0,0,0" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Text="{Binding Speed}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2"/>
                        <TextBlock Margin="90,0,0,0" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Text="{Binding Signature}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3"/>
                        <TextBlock Margin="130,0,0,0" Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=InfoVisibility}" Text="{Binding Scale}" Foreground="{Binding RelativeSource={RelativeSource AncestorType=local:GameVisual},Path=Foreground}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4"/>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
