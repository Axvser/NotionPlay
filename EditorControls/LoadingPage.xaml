<UserControl x:Class="NotionPlay.EditorControls.LoadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotionPlay.EditorControls"
             xmlns:drawex="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d"
             x:Name="Root">
    <Grid >
        <TextBlock x:Name="TextView"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Foreground="{Binding ElementName=Root,Path=OBrush}"
                   FontSize="{Binding ElementName=Root,Path=FontSize}"
                   Text="Simulating" 
                   Opacity="0"/>

        <drawex:Arc StartAngle="0" 
                    Width="{Binding ElementName=Root,Path=Height}"
                    Height="{Binding ElementName=Root,Path=Height}"
                    EndAngle="240" 
                    StrokeThickness="2"
                    Stroke="{Binding RelativeSource={RelativeSource AncestorType=local:LoadingPage},Path=OBrush}"
                    Stretch="None"
                    RenderTransform="{Binding RelativeSource={RelativeSource AncestorType=local:LoadingPage},Path=OChildTransform}"/>

        <drawex:Arc StartAngle="240"
                    Width="{Binding ElementName=Root,Path=Height}"
                    Height="{Binding ElementName=Root,Path=Height}"
                    EndAngle="360" 
                    StrokeThickness="2"
                    Stroke="{Binding RelativeSource={RelativeSource AncestorType=local:LoadingPage},Path=IBrush}"
                    Stretch="None"
                    RenderTransform="{Binding RelativeSource={RelativeSource AncestorType=local:LoadingPage},Path=IChildTransform}"/>
    </Grid>
</UserControl>
